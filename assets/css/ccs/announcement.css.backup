/* forum threads */
.ccs-announcement-row{
    background: #eaeaea;
}
.ccs-announcement{
    border-radius: 5px;
    margin-bottom: 15px;
    padding: 0;
}
.ccs-announcement-header{
    border: none;
}
.ccs-announcement-header a{
    padding: 0 8px;
    padding-top: 1px; 
    background: #ff6000;
    color: #eaeaea;
    font-size: 34px;
}
.ccs-announcement-author{
     font-size: 12px;
}
.ccs-announcement-thread-controls{
    position: absolute;
    top: 0;
    right: 0;
}
.ccs-announcement-thread-controls ul{

    z-index: 5;
}
.ccs-announcement-thread-controls ul li{
    display: inline;
    list-style: none;
    font-size: 20px;
}
.ccs-announcement-thread-controls ul li > a{
    color: #151515;
    padding: 0 7px 0 5px;
}
.ccs-announcement-thread-controls ul li:not(:last-child) > a{
    border-right: 1px solid rgba(0,0,0,0.1);
}
.ccs-announcement .ccs-announcement-media .ccs-announcement-see-more{
    border-radius: 0;
    color: #151515;
    display: none;
}
.ccs-announcement .ccs-announcement-media{
    padding: 10px 10px 20px 10px;
    position: relative;
    padding-bottom: 20px;
    background: #eee;
    z-index: 2;
    /*border-bottom: 3px solid #fff;*/
    box-shadow: 0px 1px 2px 0 rgba(0,0,0,0.4);
}
.ccs-announcement .ccs-announcement-media .media-body{
    height: 175px;
}
.ccs-announcement .ccs-announcement-media .media-body p.ccs-announcement-detail{
    word-wrap: break-word;
    font-size: 13px;
    overflow-x: auto;
}
.ccs-announcement .ccs-announcement-media .media-body a.label{
    display: none;
    margin: 68px 13px 0 0;
    position: absolute;
    right: 0;
}
.ccs-announcement .media .media-body{
    padding-bottom: 10px;
}
.ccs-announcement img.media-object{
    width: 50px;
    height: 50px;
}
.ccs-announcement hr{
    margin: 10px 0;
}

.ccs-announcement a.ccs-announcement-thread{
    font-size: 18px;
    font-family: 'Open Sans';
}
.ccs-announcement a.ccs-announcement-thread h3{
    padding: 5px;
    margin-right: 15px;
}
.ccs-announcement a.ccs-announcement-thread:hover, 
.ccs-announcement a.ccs-announcement-thread:visited, 
.ccs-announcement a.ccs-announcement-thread:active, 
.ccs-announcement a.ccs-announcement-thread:focus{
    text-decoration: none;
    outline: none;
}
.ccs-announcement .media-body div.dropdown ul{
    min-width: 90px;
}

/* add new announcement */
.ccs-announcement-add-new-form .ccs-announcement-loader{
    border-color: #ffc69e;
    background: #ffe3c6;
}
.ccs-announcement-add-new-form .ccs-announcement-ok{
    border-color: #22bd00 !important;
    border-top-color: #66AFE9 !important;
    background: #dff0d8 !important;
    color: #468847 !important;
    padding-bottom: 2px;
}
.ccs-input-topic-label{
    width: 150px;
    display: inline;
    border-radius: 5px 0 0 0;
    background: #009999;
    padding: 10px;
}
.ccs-add-new-forum-announcement-form input{
    width: 93.77%;
    color: #151515;
    font-size: 15px;
    border: none;
    padding: 10px;
}
.ccs-add-new-forum-announcement-form input::-moz-placeholder {
    color: #151515;
    font-size: 15px;
}
.ccs-add-new-forum-announcement-form{
    position: relative;
    padding:10px 20px;
    width:inherit;
    height: auto;
    background: #ff6000 ;
    display: none;

}
/*.ccs-add-new-forum-announcement-form:before{
    position: absolute;
    z-index: 5;
    content: "";
    bottom: -5px;
    left: 20px;
    width: 15px;
    border-top: 19px solid #fff;
    border-right: 17px solid transparent;
}*/
.ccs-add-new-forum-announcement-form-inner{
    position:relative;
}
.ccs-btn-post{
    font-size: 14px;
    border-radius: 0 0 5px 5px;
    color: #FFF;
    width: inherit;
    text-align: right;
}
.ccs-btn-post button{
    padding: 12px 14px 13px 12px;
    background: #009999;
    border:none;
    color:#fff;
    margin-left:7px;
}
.ccs-btn-post button  >i{
    font-size: 20px;
}
.note-editable{
    border-bottom:6px solid #009999;
}
.btn {
    border: none;
    display: inline-block;
}

.ccs-announcement-media .media-body .ccs-announcement-thread-container{
    width: 100%;
}
.ccs-announcement-media .media-body .ccs-announcement-thread-container.with-collapse{
    padding-right: 130px;
}
.ccs-announcement-media .media-body .ccs-announcement-thread-container.without-collapse{
    padding-right: 95px;
}

@media(max-width: 767px){
    .ccs-announcement-thread-controls ul li{
        display: table-row;
        padding-top: 20px;
        padding-bottom: 10px;
    }
    .ccs-announcement-thread-controls ul > li:not(:last-child) > a{
        border-right: none;
        border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    .ccs-announcement-thread-controls ul > li:nth-child(3) > a{
        padding-right: 11px;
    }
    .ccs-announcement-thread-controls ul > li:nth-child(3) > a > span{
        margin-left: 1px;
    }
    .ccs-announcement .media .media-body{
        padding-right: 28px;
    }
}